{% extends 'client/layout.njk' %}

{% block content %}
<section class="banner">
  <div class="banner-text">
    <h3>As melhores receitas</h3>
    <p>Aprenda a construir os melhores pratos</p>
    <p>com receitas criadas por profissionais</p>
    <p>do mundo inteiro.</p>
  </div>
  <div class="banner-img">
    <img src="/assets/chef.png" alt="">
  </div>
</section>

<section class='recipes'>
  <div class="recipes-title">
    <h4>
      Mais acessadas
    </h4>
  </div>

  <div class="recipes-grid">
    {% for recipe in recipes %}
    <div class="recipe">
      <div class="recipe-img">
        <img src="{{recipe.image}}" alt="" class="Imagem de {{recipe.title}}">
      </div>
      <div class="recipe-content">
        <p>{{recipe.title}}</p>
      </div>
      <div class="recipe-author">
        <p>por {{recipe.author}}</p>
      </div>
    </div>
    {% endfor %}
</section>

{% endblock %}