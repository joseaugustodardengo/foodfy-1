{% extends 'admin/layout.njk' %}

{% block head %}
<title>{{recipe.title}}</title>
{% endblock %}

{% block content %}

<div class="recipeDetail-wrapper">

  <header>
    <a href="/admin/chefs">Voltar</a>
    <a href="/admin/chefs/{{chef.id}}/edit">Editar chef</a>
  </header>
  <div class="chefDetail-img">
    <img src="{{chef.avatar_url}}" alt="Imagem do chef {{chef.name}}">
  </div>

  <div class="recipeDetail-titleWrapper">
    <div class="recipeDetail-title">
      <p>{{chef.name}}</p>
    </div>
    <div class="recipeDetail-author">
      <p>
        {% if chef.total_recipes > 1 %}{{chef.total_recipes}} receitas cadastradas{% endif %}
        {% if chef.total_recipes == 0 %}Nenhuma receita cadastrada{% endif %}
        {% if chef.total_recipes == 1 %}{{chef.total_recipes}} receita cadastrada{% endif %}
      </p>
    </div>
  </div>

  <section class='recipes'>
    <div class="recipes-title">
      <h4>
        Receitas
      </h4>
    </div>

    <div class="recipes-grid">
      {% for recipe in recipes %}
      <div class="recipe">
        <div class="recipe-img">
          <img src="{{recipe.image}}" alt="" class="Imagem de {{recipe.title}}">
        </div>
        <div class="recipe-content">
          <p>{{recipe.title}}</p>
        </div>
        <div class='visualization-button'>
        <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
      </div>     
      </div>
      {% endfor %}
  </section>
</div>
{% endblock %}