{% extends 'admin/layout.njk' %}

{% block content %}

<div class='recipe-manager-title'>
<h3>Gerenciar receitas</h3>
</div>

<section class='recipes'>
  <div class="recipes-grid">
    {% for recipe in recipes %}

    <div class="recipe">
      <div class="recipe-img">
        <a href='/recipes/recipe/{{recipe.id}}'>
          <img src="{{recipe.image}}" alt="" class="Image de {{recipe.title}}">
        </a>
      </div>

      <div class="recipe-content">
        <a href='/recipes/recipe/{{recipe.id}}'>
          {{recipe.title}}
        </a>
      </div>

      <div class="recipe-author">
        <a href='/recipes/recipe/{{recipe.id}}'>
          por {{recipe.author}}
        </a>
      </div>

      <div>
        <a class='visualization-button' href="/admin/recipes/{{recipe.id}}">Visualizar</a>
      </div>
    </div>

  {% endfor %}
  </div>

  {% endblock %}